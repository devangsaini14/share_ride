<%- model_class = Ride -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:source) %>:</strong></dt>
  <dd><%= @ride.source %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_latitude) %>:</strong></dt>
  <dd><%= @ride.source_latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_longitude) %>:</strong></dt>
  <dd><%= @ride.source_longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination) %>:</strong></dt>
  <dd><%= @ride.destination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_latitude) %>:</strong></dt>
  <dd><%= @ride.destination_latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_longitude) %>:</strong></dt>
  <dd><%= @ride.destination_longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @ride.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @ride.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seats) %>:</strong></dt>
  <dd><%= @ride.seats %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @ride.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @ride.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @ride.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rides_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ride_path(@ride), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ride_path(@ride),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
